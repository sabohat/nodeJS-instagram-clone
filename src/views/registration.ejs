<%- include('parts/header')%>

<section class="vh-100 d-flex flex-column justify-content-center align-items-center registration">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card text-center p-4">
                    <h1>Instagram</h1>
                    <strong class="text-muted registration-slogan">
                        Sign up to see photos and videos from your friends.
                    </strong>
                    <form class="mt-4" method="POST">
                        <div class="form-field">
                            <input type="tel" name="phone" id="phone" class="form-control my-2 pt-3 bg-light" autocomplete="off" required>
                            <label for="phone">Mobile or phone number</label>
                        </div>
                        <div class="form-field">
                        <input type="text" name="name" id="name" class="form-control my-2 pt-3 bg-light" autocomplete="off" required>
                        <label for="name">Full name</label>
                        </div>
                        <div class="form-field">
                            <input type="text" name="username" id="username" class="form-control my-2 pt-3 bg-light" autocomplete="off" required>
                            <label for="username">Username</label>
                        </div>
                        <div class="form-field">
                            <input type="password" name="password" id="password" class="form-control my-2 pt-3 bg-light" autocomplete="off" required>
                            <label for="password">Password</label>
                        </div>     
                        <div class="btn btn-primary w-100">Sign Up</div>                   
                    </form>
                    <p class="mt-4 text-muted">By signing up, you agree to our <a target="_blank" tabindex="0" href="https://help.instagram.com/581066165581870">Terms</a> , 
                    <a target="_blank" tabindex="0" href="https://help.instagram.com/519522125107875">Data Policy</a> and 
                <a target="_blank" tabindex="0" href="https://www.instagram.com/legal/cookies/">Cookies Policy</a> .</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card text-center d-flex flex-column justify-content-center align-items-center mt-0">
                    <p>Have an account? <a href="/login">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</section>